$!epub3.make
  title='EPub3 ebook, generated by package SemiXML in Perl6'
  creator=mt1957
  language=US-en
  rights='Public Domain'
  publisher=mt1957
  book-id=5da84cf4-ef95-11e6-bc64-92361f002671
  book-id-type="uuid"

  epub-build-dir=doc/Examples/EPub3/Build-Doc
  epub-doc-name=My-Book
  mimetype=application/epub+zip

  cleanup=1
  formatted-xml=1 [

  # All files for the book go in the manifest section
  $!epub3.manifest workdir=doc/Examples/EPub3/My-Docs [
    $!epub3.item href=Styles/page-template.xpgt
    $!epub3.item href=Styles/stylesheet.css
    $!epub3.item href=Images/sample.png

    # The books below also go in the spine section in this order
    $!epub3.item spine=1 href=Text/title_page.xhtml
    $!epub3.item spine=1 href=Text/chap01.xhtml
    $!epub3.item spine=1 href=Text/chap02.xhtml
  ]
]
