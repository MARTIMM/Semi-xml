$!epub3.make
  title='EPub3 ebook, generated by package SemiXML in Perl6'
  creator=mt1957
  language=US-en
  rights='Public Domain'
  publisher=mt1957
  book-id=5da84cf4-ef95-11e6-bc64-92361f002671
  id-scheme="UUID"

  epub-build-dir=doc/Examples/EPub3/Build-Doc
  epub-doc-name=My-Book
  mimetype=application/epub+zip

  cleanup=1 [

  # All files for the book
  $!epub3.manifest workdir=doc/Examples/EPub3/My-Docs [
    $!epub3.item href=page-template.xpgt
    $!epub3.item href=sample.png
    $!epub3.item href=stylesheet.css

    $!epub3.item href=title_page.xhtml
    $!epub3.item href=chap01.xhtml
    $!epub3.item href=chap02.xhtml
  ]

  # Files and sequence of the book
  $!epub3.toc [
    $!epub3.item href=title_page.xhtml
    $!epub3.item href=chap01.xhtml
    $!epub3.item href=chap02.xhtml
  ]
]
