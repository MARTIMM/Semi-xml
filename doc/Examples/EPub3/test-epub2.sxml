$!epub2.make
  title='EPub2 ebook, generated by package SemiXML in Perl6'
  creator=mt1957
  language=US-en
  rights='Public Domain'
  publisher=mt1957
  book-id=5da84cf4-ef95-11e6-bc64-92361f002671
  book-id-type="uuid"

  epub-build-dir=doc/Examples/EPub3/Build-Doc-epub2
  epub-doc-name=My-Book-e2
  mimetype=application/epub+zip

  cleanup=1
  formatted-xml=1 [

  # All files for the book go in the manifest section
  $!epub2.manifest workdir=doc/Examples/EPub3/My-Docs [
    $!epub2.item href=Styles/page-template.xpgt
    $!epub2.item href=Styles/stylesheet.css
    $!epub2.item href=Images/sample.png

    # The books below also go in the spine section in this order
    $!epub2.item spine=1 href=Text/title_page.xhtml
    $!epub2.item spine=1 href=Text/chap01.xhtml
    $!epub2.item spine=1 href=Text/chap02.xhtml
  ]

  $!epub2.navigation [
    $ncx xmlns=http://www.daisy.org/z3986/2005/ncx/
    $head [
      $meta name=dtb:uid content=5da84cf4-ef95-11e6-bc64-92361f002671
    ]

    $docTitle [
      $text [EPub2 ebook, generated by package SemiXML in Perl6]
    ]

    $navMap [
      $navPoint id=doc-4 playOrder=1 [
        $navLabel [
          $text [Titel pagina]
        ]
        $content src=Text/title_page.xhtml
      ]

      $navPoint id=doc-5 playOrder=2 [
        $navLabel [
          $text [Hoofdstuk 1]
        ]
        $content src=Text/chap01.xhtml
      ]

      $navPoint id=doc-6 playOrder=3 [
        $navLabel [
          $text [Hoofdstuk 2]
        ]
        $content src=Text/chap02.xhtml
      ]
    ]
  ]

$!SxmlCore.comment [
<ncx xmlns="http://www.daisy.org/z3986/2005/ncx/">
  <head>
    <meta name="dtb:uid" content="5da84cf4-ef95-11e6-bc64-92361f002671"/>
  </head>
  <docTitle>
    <text>EPub2 ebook, generated by package SemiXML in Perl6</text>
  </docTitle>
  <navMap>
    <navPoint id="doc-4" playOrder="1">
      <navLabel>
        <text>Part 1 - title_page</text>
      </navLabel>
      <content src="Text/title_page.xhtml"/>
    </navPoint>
    <navPoint id="doc-5" playOrder="2">
      <navLabel>
        <text>Part 2 - chap01</text>
      </navLabel>
      <content src="Text/chap01.xhtml"/>
    </navPoint>
    <navPoint id="doc-6" playOrder="3">
      <navLabel>
        <text>Part 3 - chap02</text>
      </navLabel>
      <content src="Text/chap02.xhtml"/>
    </navPoint>
  </navMap>
</ncx>
]

]
